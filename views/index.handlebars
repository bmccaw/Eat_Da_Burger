

<div class="container">
<div class="row">
    <div class="col s6">
        <h2>Burgers</h2>
<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerUp'> {{this.burger_name}}</button>
              </form>
            </div>
        {{/unless}}
    {{/each}}
</ul>
</div>
<div class="col s6">
<h2>Devoured Burgers</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
      <div class='burgerDev'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<div class="row">
    <div class="col s12">
<form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Royale with Cheese">
      <button type="submit" class="addBurgerButton">Add Burger</button>
    </form>
    </div>
    </div>
</div>